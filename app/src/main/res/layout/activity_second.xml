<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Jago Koding"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jago Koding adalah aplikasi di mana Anda dapat dengan mudah menemukan playlist belajar berbagai hal mengenai pemrograman."
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp"/>

    <Button
        android:id="@+id/BtnFirstAct"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Mulai Belajar!" />

</LinearLayout>